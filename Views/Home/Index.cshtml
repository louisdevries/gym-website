@{
    ViewData["Title"] = "Welcome to Warrior Wisdom";
}

@section Styles {
    <link href="~/css/index.css" rel="stylesheet" asp-append-version="true">
}

<div class="hero">
    <p class="lead">Embrace the Warrior Within, Guided by Wisdom, Driven By Purpose, Grounded in Peace</p>
</div>

<section class="programs">
    <a href="women.html" class="program-card">
        <div class="overlay-text">Women</div>
        <img src="https://res.cloudinary.com/dj66v3aj7/image/upload/v1739349845/copilot_image_1737560494399_tc7zul.jpg" alt="Women Program">
    </a>
    <a href="men.html" class="program-card">
        <div class="overlay-text">Men</div>
        <img src="https://res.cloudinary.com/dj66v3aj7/image/upload/v1739349845/copilot_image_1737560293646_g3cmkj.jpg" alt="Men Program">
    </a>
</section>

<section class="about-us-section" id="about-us">
    <div class="about-us-container">
        <div class="about-us-text">
            <h2>Transform Your Health, Transform Your Life</h2>
            <p>At Warrior Wisdom, we believe that fitness is not just about looking good, but feeling great from the inside out.</p>
            <p>Our mission is to empower individuals of all fitness levels to take control of their health through personalized workout plans, expert guidance, and a supportive community. Whether you’re just starting your fitness journey or pushing towards new goals, we’re here to help you achieve the results you desire. Join us in creating a stronger, healthier version of you!</p>
        </div>
        <div class="about-us-image">
            <img src="https://res.cloudinary.com/dj66v3aj7/image/upload/v1739433305/about-us-img_lxh2cx.jpg" alt="Warrior Wisdom About Us Image">
        </div>
    </div>
</section>


<section class="services">
    <h2 class="text-center">Why Choose Warrior Wisdom</h2>
    <div class="services-container">
        <div class="service-card">
            <i class="fas fa-dumbbell"></i>
            <h3>Free Workout Plans</h3>
            <p>Access personalized exercise routines tailored to your goals without any cost.</p>
        </div>
        <div class="service-card">
            <i class="fas fa-users"></i>
            <h3>Community Support</h3>
            <p>Join a vibrant community of fitness enthusiasts who inspire and support each other.</p>
        </div>
        <div class="service-card">
            <i class="fas fa-chart-line"></i>
            <h3>Track Your Progress</h3>
            <p>Monitor your workout achievements and stay motivated as you reach new milestones.</p>
        </div>
    </div>
</section>
